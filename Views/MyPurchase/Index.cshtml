
@{
    ViewData["Title"] = "My Purchases";
    List<MyPurchaseViewModel> myPurchaseViewModels = (List<MyPurchaseViewModel>)ViewData["myPurchaseViewModel"];
}


@if (TempData["Alert"] != null)
{
    <p>@TempData["Alert"]</p>

}
@if (myPurchaseViewModels.Count == 0)
{
    <div class="cartEmptyDiv">
        <h3 id="cartEmptyMessage" style="text-align:center; padding: 20px;">Your history is empty!</h3>
        <img id="cartEmptyMessage_Emoji" src="~/img/CryingFaceEmoji.png" class="cart_CryingFaceEmoji" />
    </div>
}
else
{
    <body>
        <div class="container">
            <header class="header"> </header>

            <div class="gallery">
                @foreach (var customer in myPurchaseViewModels)
                {
                    <div class="producthistory">
                        <a><img src=/img/@customer.ImageLink alt="" class="cards" /></a>
                        <p></p>
                        <p><b>@customer.Name</b></p>
                        <div class="Desc">
                            <p>@customer.Description</p>
                        </div>
                        <p class="orderDetail">
                            Quantity: @customer.Quantity
                        </p>
                        <p class="orderDetail">
                            Order Date: @customer.DateTime
                        </p>


                        <br />
                        <select class="select">
                            <option value="Activation Code">Activation Code</option>
                            @for (int i = 0; i < customer.ActivationCode.Count; i++)
                            {
                                <option value="Actcode">@customer.ActivationCode[i]</option>

                            }
                        </select>
                        <button class="Download"><a href="~/download/1.zip">Download</a></button>
                        <br />
                    </div>
                }
            </div>

        </div>
    </body>
    <div class="copyright">&copy;2020 - <strong>GRID</strong></div>

}


<style>
    body {
        background-color: #FFFFFF;
        margin: 0;
    }
    /* Container */
    .container {
        width: 90%;
        margin-left: auto;
        margin-right: auto;
    }
    /* Header */
    header {
        width: 100%;
        height: 8%;
        background-color: #5D5E5D;
        border-bottom: 1px solid #353635;
    }

    .select {
        margin-top: 20px;
        width: 80px;
        margin-right: 15px;
    }

    .Download {
        min-width: 80px;
    }

    .orderDetail {
        color: gray;
    }

    .Detail {
        margin-top: 20px;
        margin-right: 20px;
        min-width: 80px;
    }

    .Review {
        width: 200px;
        height: 70px;
        position: center;
        overflow-y: auto;
        overflow-x: auto;
        resize: none;
    }

    .Desc {
        width: 200px;
        height: 170px;
        padding-left: 20px;
    }

    .star-rating {
        padding-left: 35px;
    }

    .text_column {
        width: 90%;
        text-align: left;
        font-weight: lighter;
        line-height: 25px;
        float: left;
        padding-left: 20px;
        padding-right: 20px;
        color: #A3A3A3;
    }

    .gallery {
        clear: both;
        display: inline-block;
        width: 100%;
        background-color: #FFFFFF;
        margin-top: 20px;
        padding-bottom: 35px;
        padding-top: 0px;
        margin-top: 25px;
        margin-bottom: 0px;
    }

    .producthistory {
        width: 220px;
        height: 700px;
        text-align: center;
        float: left;
        margin-top: 35px;
        background-color: #F8F8F8;
        padding-bottom: 20px;
        margin-left: 1%;
        margin-right: 1%;
        border-radius: 3px;
        padding-top: 20px;
        border-bottom: 4px solid #6DC7D0;
    }

    .gallery .thumbnail h4 {
        margin-top: 5px;
        margin-bottom: 5px;
        color: #52BAD5;
        text-align: left;
        padding-left: 20px;
        padding-right: 20px;
    }

    .gallery .thumbnail p {
        margin: 0;
        color: #B3B3B3;
        text-align: left;
        padding-left: 20px;
    }

    .cards {
        width: 40%;
        height: auto;
        max-width: 400px;
        max-height: 200px;
        opacity: 0.8;
    }

    .copyright {
        text-align: center;
        background-color: #717070;
        color: #FFFFFF;
        text-transform: uppercase;
        font-weight: lighter;
        letter-spacing: 2px;
        border-top-width: 2px;
        margin-top: 20px;
    }
    .cart_CryingFaceEmoji {
        height: 150px;
        width: 150px;
        display: block;
        margin-left: auto;
        margin-right: auto;
    }
</style>

